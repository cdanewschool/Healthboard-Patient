<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="980" height="681"
		 title=" User Profile" backgroundColor="0x4A4A49" borderColor="0XFFFFFF" styleName="profileFormTitle" dropShadowVisible="false" chromeColor="#706F6F" initialize="this.titleDisplay.height=50;">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		
		.myTextInput {
			color: "0x000000";
		}
	</fx:Style>
		
	<s:layout>
		<s:HorizontalLayout paddingTop="15" paddingLeft="15" />
	</s:layout>
	
	<s:states>
		<s:State name="view" />
		<s:State name="edit" />
	</s:states>
	
	<s:transitions>
		<!-- A transition for changing from any state to any state. -->
		<s:Transition id="myTransition" fromState="*" toState="*">
			<!-- Define a Parallel effect as the top-level effect.-->
			<s:Sequence id="t1" targets="{[lblStreet1, street1, lblStreet2, street2, lblCity, city, lblState, state, lblZip, zip, lblContactName, contactName, lblContactRelation, contactRelation, lblContactPhone, contactPhone, lblPhoneHome, phoneHome, lblPhoneWork, phoneWork, lblPhoneMobile, phoneMobile]}">             
				<mx:Blur duration="280" blurXFrom="10.0" blurXTo="0.0" 
						 blurYFrom="10.0" blurYTo="0.0"/> 
			</s:Sequence>
		</s:Transition>
	</s:transitions>
	
	<s:VGroup>
		<s:BorderContainer borderColor="0xBBBDBF" borderWeight="1" width="108" height="136"> 
			<mx:Image source="@Embed(source='/images/profilePic.jpg')" />
		</s:BorderContainer>
		<mx:LinkButton label="change profile pic" color="0xFF931E" textDecoration="underline" fontStyle="italic" fontSize="12" skin="{null}" />
	</s:VGroup>
	<mx:Form id="myForm" styleName="profileFormText">				
		<mx:FormHeading label="Isaac Goodman" styleName="profileFormName" paddingLeft="-68" paddingTop="-5"/>
		<s:HGroup height="24">
			<s:Label width="116" textAlign="right" text="SSN:" />
			<s:Label text="213-55-4232" paddingLeft="13" />
		</s:HGroup>
		<s:HGroup height="24">
			<s:Label width="116" textAlign="right" text="FMP/Sponsor SSN:" />
			<s:Label text="213-55-4232" paddingLeft="13" />
		</s:HGroup>
		<s:HGroup height="24">
			<s:Label width="116" textAlign="right" text="DOB:" />
			<s:Label text="01/01/0965" paddingLeft="13" />
		</s:HGroup>
		<s:HGroup height="24">
			<s:Label width="116" textAlign="right" text="Age:" />
			<s:Label text="46 years" paddingLeft="13" />
		</s:HGroup>
		<s:HGroup height="24"> 
			<s:Label width="116" textAlign="right" text="Sex:" />
			<s:Label text="Male" paddingLeft="13" />
		</s:HGroup>
		<s:HGroup paddingBottom="15" paddingTop="5">
			<s:Line xFrom="0" xTo="789">
				<s:stroke>
					<s:SolidColorStroke color="0x898989" weight="1"/>
				</s:stroke>
			</s:Line>
		</s:HGroup>
		
		<s:HGroup>
			<s:VGroup>
				<s:Label text="Address" paddingLeft="136" styleName="profileFormSubtitle" />
				<mx:FormItem label="Street 1:" labelWidth="122" height="24" width="300">
					<s:Label id="lblStreet1" text="123 4th Avenue" includeIn="view" paddingTop="7" />
					<mx:TextInput id="street1" maxChars="50" text="123 4th Avenue" includeIn="edit" styleName="myTextInput" />
				</mx:FormItem>
				<mx:FormItem label="Street 2:" labelWidth="122" height="24" width="300">
					<s:Label id="lblStreet2" text="" includeIn="view" paddingTop="7" />
					<mx:TextInput id="street2" maxChars="50" text="" includeIn="edit" styleName="myTextInput"/>
				</mx:FormItem>
				<mx:FormItem label="City:" labelWidth="122" height="24" width="300">
					<s:Label id="lblCity" text="New York" includeIn="view" paddingTop="7" />
					<mx:TextInput id="city" maxChars="30" text="New York" includeIn="edit" styleName="myTextInput"/>
				</mx:FormItem>
				<mx:FormItem label="State/Province:" labelWidth="122" height="24" width="300">
					<s:Label id="lblState" text="NY" includeIn="view" paddingTop="7" />
					<mx:TextInput id="state" maxChars="5" text="NY" includeIn="edit" styleName="myTextInput"/>
				</mx:FormItem>
				<mx:FormItem label="ZIP/Postal Code:" labelWidth="122" height="24" width="300">
					<s:Label id="lblZip" text="56789" includeIn="view" paddingTop="7" />
					<mx:TextInput id="zip" maxChars="10" text="56789" includeIn="edit" styleName="myTextInput"/>
				</mx:FormItem>
			</s:VGroup>
			<s:VGroup>
				<s:Label text="Emergency Contact" paddingLeft="264" styleName="profileFormSubtitle" />
				<mx:FormItem label="Name:" labelWidth="250" height="24">
					<s:Label id="lblContactName" text="Chloe Goodman" includeIn="view" paddingTop="7" />
					<mx:TextInput id="contactName" maxChars="50" text="Chloe Goodman" includeIn="edit" styleName="myTextInput" />
				</mx:FormItem>
				<mx:FormItem label="Relation:" labelWidth="250" height="24">
					<s:Label id="lblContactRelation" text="Spouse" includeIn="view" paddingTop="7" />
					<mx:TextInput id="contactRelation" maxChars="30" text="Spouse" includeIn="edit" styleName="myTextInput" />
				</mx:FormItem>
				<mx:FormItem label="Emergency Phone:" labelWidth="250" height="24">
					<s:Label id="lblContactPhone" text="212-123-4567" includeIn="view" paddingTop="7" />
					<mx:TextInput id="contactPhone" maxChars="30" text="212-123-4567" includeIn="edit" styleName="myTextInput" />
				</mx:FormItem>
				<s:HGroup paddingLeft="260">
					<s:Button label="+ New Contact" />
				</s:HGroup>
			</s:VGroup>
		</s:HGroup>
		
		<s:HGroup paddingBottom="15" paddingTop="10">
			<s:Line xFrom="0" xTo="789">
				<s:stroke>
					<s:SolidColorStroke color="0x898989" weight="1"/>
				</s:stroke>
			</s:Line>
		</s:HGroup>
		
		<s:Label text="Phone Number" paddingLeft="136" styleName="profileFormSubtitle" />
		<mx:FormItem label="Work:" labelWidth="122" height="24">
			<s:Label id="lblPhoneWork" text="212-123-4567" includeIn="view" paddingTop="7" />
			<mx:TextInput id="phoneWork" maxChars="30" text="212-123-4567" includeIn="edit" styleName="myTextInput" />
		</mx:FormItem>
		<mx:FormItem label="Home:" labelWidth="122" height="24">
			<s:Label id="lblPhoneHome" text="718-123-4567" includeIn="view" paddingTop="7" />
			<mx:TextInput id="phoneHome" maxChars="30" text="718-123-4567" includeIn="edit" styleName="myTextInput" />
		</mx:FormItem>
		<mx:FormItem label="Mobile:" labelWidth="122" height="24">
			<s:Label id="lblPhoneMobile" text="917-123-4567" includeIn="view" paddingTop="7" />
			<mx:TextInput id="phoneMobile" maxChars="30" text="917-123-4567" includeIn="edit" styleName="myTextInput" />
		</mx:FormItem>
		
		<s:HGroup paddingTop="10" paddingBottom="15">
			<s:Line xFrom="0" xTo="789">
				<s:stroke>
					<s:SolidColorStroke color="0x898989" weight="1"/>
				</s:stroke>
			</s:Line>
		</s:HGroup>
		
		<s:HGroup horizontalAlign="center" width="100%">
			<s:Button label="Edit" click="{currentState='edit'}" includeIn="view" />
			<s:HGroup>
				<s:Button label="Save" click="{currentState='view'}" includeIn="edit" />
				<s:Button label="Cancel" click="{currentState='view'}" includeIn="edit" />
			</s:HGroup>
		</s:HGroup>
		
	</mx:Form>
</s:Panel>
