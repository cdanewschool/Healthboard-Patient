<?xml version="1.0" encoding="utf-8"?>
<modules:MedicationsModule 
	
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:modules="modules.*">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import components.popups.RecordIntakePopup;
			
			import mx.managers.PopUpManager;
			
			var popup:RecordIntakePopup;
			
			override protected function onRecordIntakeClick(event:MouseEvent):void
			{
				if( popup ) PopUpManager.removePopUp( popup );
				
			 	popup =	PopUpManager.createPopUp( AppProperties.getInstance().controller.application, RecordIntakePopup ) as RecordIntakePopup;
				PopUpManager.centerPopUp( popup );
			}
		]]>
	</fx:Script>
</modules:MedicationsModule>
